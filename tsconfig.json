{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@theme/*": ["theme/*"]
    },
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "compileOnSave": true,
  "include": [
    "next-env.d.ts",
    "**/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**./*.d.ts"
  ],
  "exclude": ["node_modules"]
}
